{
  "id": "org.opentransactions.metier",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "metier",
  "modules": [
    {
      "name": "boost",
      "buildsystem": "simple",
      "sources": [
        {
          "url": "https://boostorg.jfrog.io/artifactory/main/release/1.76.0/source/boost_1_76_0.tar.bz2",
          "sha256": "f0397ba6e982c4450f27bf32a2a83292aba035b827a5623a14636ea583318c41",
          "type": "archive"
        }
      ],
      "cleanup": [
        "*.a",
        "/include",
        "/lib/cmake",
        "/lib/debug"
      ],
      "build-commands": [
        "./bootstrap.sh --prefix=/app --without-libraries=python",
        "./b2 --prefix=/app --build-type=minimal --layout=system variant=release link=shared threading=multi runtime-link=shared",
        "./b2 --prefix=/app --build-type=minimal --layout=system variant=release link=shared threading=multi runtime-link=shared install"
      ]
    },
    {
      "name": "sodium",
      "buildsystem": "autotools",
      "config-opts": [
        "--enable-shared",
        "--disable-static"
      ],
      "sources": [
        {
          "url": "https://download.libsodium.org/libsodium/releases/libsodium-1.0.18.tar.gz",
          "sha256": "6f504490b342a4f8a4c4a02fc9b866cbef8622d5df4e5452b46be121e46636c1",
          "type": "archive"
        }
      ],
      "cleanup": [
        "*.la",
        "/include",
        "/lib/debug",
        "/lib/pkgconfig"
      ]
    },
    {
      "name": "zeromq",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DENABLE_DRAFTS=ON",
        "-DWITH_LIBSODIUM=ON",
        "-DWITH_LIBSODIUM_STATIC=OFF",
        "-DENABLE_CURVE=ON",
        "-DWITH_DOCS=OFF",
        "-DBUILD_SHARED=ON",
        "-DBUILD_STATIC=OFF",
        "-DBUILD_TESTS=OFF"
      ],
      "sources": [
        {
          "url": "https://github.com/zeromq/libzmq/releases/download/v4.3.4/zeromq-4.3.4.tar.gz",
          "sha1": "47277a64749049123d1401600e8cfbab10a3ae28",
          "type": "archive"
        }
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/debug",
        "/lib/pkgconfig",
        "/share"
      ]
    },
    {
      "name": "protobuf",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "subdir": "cmake",
      "config-opts": [
        "-Dprotobuf_BUILD_TESTS=OFF",
        "-Dprotobuf_BUILD_SHARED_LIBS=ON",
        "-Dprotobuf_WITH_ZLIB=ON"
      ],
      "sources": [
        {
          "url": "https://github.com/protocolbuffers/protobuf/archive/refs/tags/v3.16.0.tar.gz",
          "sha256": "7892a35d979304a404400a101c46ce90e85ec9e2a766a86041bb361f626247f5",
          "type": "archive"
        }
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/debug",
        "/lib/pkgconfig",
        "libprotoc*"
      ]
    },
    {
      "name": "lmdb",
      "buildsystem": "simple",
      "subdir": "libraries/liblmdb",
      "build-commands": [
        "sed -i s~/usr/local~/app~ Makefile",
        "make -j $FLATPAK_BUILDER_N_JOBS",
        "make install",
        "rm /app/lib/liblmdb.a"
      ],
      "sources": [
        {
          "url": "https://github.com/LMDB/lmdb",
          "tag": "LMDB_0.9.29",
          "commit": "8ad7be2510414b9506ec9f9e24f24d04d9b04a1a",
          "type": "git"
        }
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/debug",
        "/share"
      ]
    },
    {
      "name": "opentxs",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DBUILD_SHARED_LIBS=ON",
        "-DOT_CRYPTO_SUPPORTED_KEY_RSA=ON",
        "-DOT_CRYPTO_USING_PACKETCRYPT=OFF",
        "-DOT_CASH_USING_LUCRE=ON",
        "-DOT_WITH_QT=ON",
        "-DOT_WITH_QML=OFF",
        "-DOT_ENABLE_RPC=ON",
        "-DOT_BUNDLED_SECP256K1=ON"
      ],
      "sources": [
        {
          "url": "https://github.com/Open-Transactions/opentxs",
          "commit": "a698a3cf810df6105b34a95b2de9cceba75833f9",
          "type": "git",
          "disable-shallow-clone": true
        }
      ],
      "cleanup": [
        "/include",
        "/lib/debug",
        "/lib/opentxs",
        "/lib/pkgconfig"
      ]
    },
    {
      "name": "metier",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
          "-DMETIER_DEFAULT_SYNC_SERVER=tcp://54.39.129.45:8814"
      ],
      "sources": [
        {
          "url": "https://github.com/Open-Transactions/metier",
          "branch": "develop",
          "type": "git",
          "disable-shallow-clone": true
        }
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ]
}
